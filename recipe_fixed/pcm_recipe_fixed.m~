function varargout=pcm_recipe_fixed(runEffect)
% Fit a fixed pcm-model
% For run effect fixed, it does not matter if the
% whether its the centered or non-centered G matrix
% If the run effect is random, it does matter, as the model needs
% to also explain some part of the common activity across
% conditions
load data_recipe_fixed.mat

% Model 1: Null model for baseline 
M(1).type       = 'fixed';
M(1).numGparams = 0;

M(1).name       = 'null'; 

% Model 1: Muscle model
M(2).type       = 'fixed';
M(2).numGparams = 0;
M(2).Gc         = Model(1).G_cent;
M(2).name       = 'muscle'; 

% Model2: Natural statistics model
M(3).type       = 'fixed';
M(3).numGparams = 0;
M(3).Gc         = Model(2).G_cent;
M(3).name       = 'usage'; 

% Model 3: Additive mixture between muscle and natural stats model
M(4).type       = 'component';
M(4).numGparams = 2;
M(4).Gc(:,:,1)  = Model(1).G_cent;
M(4).Gc(:,:,2)  = Model(2).G_cent;
M(4).name       = 'muscle + usage'; 

% "Model" 4: average of all other subjects (Noise ceiling)
M(5).type       = 'noiseceiling';
M(5).numGparams = 0;

% Fit the models 
T = pcm_fitModelCrossval(Y,M,partVec,condVec,'runEffect',runEffect,'verbose',0);

% Provide a plot of the crossvalidated likelihoods 
T = pcm_fitModelPlot(T,M); 

varargout={T}; 
